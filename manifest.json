{
  "manifest_version": 3,
  "name": "Bing Copilot Hider",
  "version": "1.1",
  "description": "Hide or show the Copilot section on Bing search results.",
  "permissions": ["storage", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://www.bing.com/search*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Copilot"
  }
}
